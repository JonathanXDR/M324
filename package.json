{
  "name": "m324-music-platform",
  "module": "./Code/src/index.ts",
  "type": "module",
  "scripts": {
    "check:types": "tsc --noEmit",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "start": "bun --hot run ./Code/src/index.ts",
    "test": "vitest",
    "test:unit": "vitest run --config vitest.config.ts --testPathPattern=unit",
    "test:integration": "vitest run --config vitest.config.ts --testPathPattern=integration",
    "test:system": "vitest run --config vitest.config.ts --testPathPattern=system",
    "database:setup": "prisma migrate reset --force --schema ./Code/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "6.3.0",
    "@types/express": "^5.0.0",
    "axios": "^1.7.9",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.19.0",
    "@types/bun": "1.2.1",
    "@types/node": "^22.12.0",
    "@types/supertest": "^6.0.2",
    "@types/wait-on": "^5.3.4",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "neostandard": "^0.12.0",
    "prettier": "^3.4.2",
    "prisma": "6.3.0",
    "supertest": "^7.0.0",
    "vitest": "^3.0.4",
    "wait-on": "^8.0.2"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "prisma": {
    "seed": "bun ./Code/prisma/seed.ts"
  }
}