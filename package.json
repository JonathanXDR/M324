{
  "name": "m324-music-platform",
  "module": "./Code/src/index.ts",
  "type": "module",
  "scripts": {
    "build": "bun build ./Code/src/index.ts --outdir ./public",
    "check:types": "tsc --noEmit",
    "database:setup": "prisma migrate reset --force --schema ./Code/prisma/schema.prisma",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "start": "bun --hot run ./Code/src/index.ts"
  },
  "dependencies": {
    "@prisma/client": "6.2.1",
    "@types/express": "^5.0.0",
    "axios": "^1.7.9",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.19.0",
    "@types/bun": "1.2.0",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.2",
    "neostandard": "^0.12.0",
    "prettier": "^3.4.2",
    "prisma": "6.2.1"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "prisma": {
    "seed": "bun ./Code/prisma/seed.ts"
  }
}
